FIND_PATH(LibHSL_INCLUDE_DIR hslLIB.h ${CMAKE_SOURCE_DIR}/libHSL)

IF (LibHSL_INCLUDE_DIR)
	SET(LibHSL_FOUND TRUE)
        SET(LibHSL_FIND_QUIETLY FALSE)
ELSE ()
	SET(LibHSL_FOUND FALSE)
	SET(LibHSL_FIND_REQUIRED TRUE)
ENDIF ()

IF (LibHSL_FOUND)
	IF (NOT LibHSL_FIND_QUIETLY)
		MESSAGE(STATUS "Found LibHSL: ${LibHSL_INCLUDE_DIR}")
	ENDIF ()
ELSE ()
 	IF (LibHSL_FIND_REQUIRED)
		MESSAGE(FATAL_ERROR "Could not find LibHSL library")
	ENDIF ()
ENDIF ()
